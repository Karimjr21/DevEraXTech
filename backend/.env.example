# Backend environment configuration
PORT=4000

# SMTP configuration (replace with your provider details)
SMTP_HOST=smtp.mailprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
MAIL_FROM=noreply@deverax.io
MAIL_TO=team@deverax.io

# Dev mode: bypass sending and return ok
EMAIL_MOCK=false

# Optional: protect /api/send-email with a shared secret
# If set, requests must include: Authorization: Bearer <token>
EMAIL_BRIDGE_TOKEN=replace-with-long-random-string

# Optional: allow CORS from your production site
# CORS_ORIGIN=https://deveraxtech.com
