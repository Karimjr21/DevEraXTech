# Backend environment configuration
PORT=4000

# SMTP configuration (Resend SMTP example)
# Host: smtp.resend.com
# Port: 465
# User: resend
# Pass: your Resend API key
SMTP_HOST=smtp.resend.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=resend
SMTP_PASS=replace-with-your-resend-api-key
MAIL_FROM=no-reply@deveraxtech.com
MAIL_TO=deveraxtech@gmail.com

# Dev mode: bypass sending and return ok
EMAIL_MOCK=false

# Optional: protect /api/send-email with a shared secret
# If set, requests must include: Authorization: Bearer <token>
EMAIL_BRIDGE_TOKEN=replace-with-long-random-string

# Optional: allow CORS from your production site
# CORS_ORIGIN=https://deveraxtech.com
